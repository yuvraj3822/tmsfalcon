<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/capture_content_color"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/seen_status_image"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/untick"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.9"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14"
                android:text="Addisonn Mejiaa requested to upload Commercial Drivers License,Medical Card,Pull Notice,Previous Employer Request ,Lease Agreement,Drug Policy Form,Soci"
                android:textColor="@color/white_greyish"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:text="5 day(s) ago"
            android:textColor="@color/light_dark_grey"/>

    </LinearLayout>

</LinearLayout>