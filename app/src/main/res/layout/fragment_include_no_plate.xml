<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.kotlinWork.AccidentModule.IncludeNoPlate">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/dimen_5"
                    app:cardElevation="@dimen/dimen_5"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="200dp">




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="centerCrop"
                            android:src="@drawable/truckimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


                        <ImageView
                            android:visibility="gone"
                            android:src="@drawable/check_24"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <ImageView
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/check_24"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <ImageView
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/check_24"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:src="@drawable/check_24"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/dimen_5"
                    app:cardElevation="@dimen/dimen_5"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:scaleType="centerCrop"
                            android:src="@drawable/othertruckimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


                        <ImageView
                            android:visibility="gone"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <ImageView
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <ImageView
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>
                        <ImageView
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_baseline_clear_24"
                            android:layout_width="25dp"
                            android:layout_height="25dp"/>




                    </RelativeLayout>


                </androidx.cardview.widget.CardView>






            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:textSize="@dimen/text_16"
                    android:text="In case of head on collision try to have picture so that number plate could be visible."
                    android:textColor="@color/white_greyish"
                    android:id="@+id/info_holistic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>




        </LinearLayout>

    </ScrollView>


</RelativeLayout>