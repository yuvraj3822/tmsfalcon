<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/transparent_curved_border_outline"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/trailer_filter_header"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:text="@string/trailer"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_12"
                android:textColor="@color/white_greyish"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center_vertical|right"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/timeline_line"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trailer_filter_body"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/timeline_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="@string/trailer"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/trailer_name_textview"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:visibility="gone"
                    android:id="@+id/trailer_name_edittext"
                    android:layout_width="120dp"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="@string/trailer_type"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/trailer_type_textview"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="160dp"
                    android:background="@drawable/spinner_custom_background"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/trailer_type_spinner"
                        android:layout_width="160dp"
                        android:theme="@style/Spinner"
                        android:spinnerMode="dialog"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="@string/max_weight"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/max_weight_edittext"
                    android:layout_width="120dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="@dimen/text_12"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="@string/length"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/length_info_imageview"
                    android:layout_width="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="20dp"
                    android:tooltipText="@string/length_trailer_filter_text"
                    android:tint="@color/light_grey"
                    android:src="@drawable/ic_info_outline_white_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/trailer_length_edittext"
                    android:layout_width="120dp"
                    android:textSize="@dimen/text_12"
                    android:inputType="number"
                    android:maxLength="2"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="@string/width"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/width_info_imageview"
                    android:layout_width="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="20dp"
                    android:tint="@color/light_grey"
                    android:tooltipText="@string/tooltip_width_trailer_filter_text"
                    android:src="@drawable/ic_info_outline_white_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/trailer_width_textview"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/trailer_width_edittext"
                    android:layout_width="120dp"
                    android:textSize="@dimen/text_12"
                    android:inputType="numberDecimal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>