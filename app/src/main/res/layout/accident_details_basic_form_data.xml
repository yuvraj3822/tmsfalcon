                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/light_dark_grey"
                                android:text="@string/accident_description"/>
                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/incident_radio_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14"
                                android:textColor="@color/light_greyish"
                                android:text="@string/an_incident"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/light_dark_grey"
                                android:text="@string/incident_description"/>
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/spinner_custom_rectangle">

                            <!-- INPUT -->
                            <com.google.android.material.textfield.TextInputLayout
