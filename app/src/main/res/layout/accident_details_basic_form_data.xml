                        <TextView
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/light_greyish"
                            android:padding="5dp"
                            android:text="@string/accident_incident_details"/>
                    </LinearLayout>

