<RelativeLayout android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/capture_content_color"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/header_layout"
        android:background="@color/toolbar_background"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/timeline_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical|left"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:tint="@color/white"
                    android:src="@drawable/history" />
                <TextView
                    android:id="@+id/header_text"
                    android:paddingTop="10dp"
                    android:textAllCaps="true"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_greyish"
                    android:text="@string/about"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/timeline_line"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/header_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/app_tour_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="12dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/app_tour"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/text_14"
                android:textColor="@color/white_greyish"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/light_dark_grey"
                android:background="@drawable/ic_navigate_next_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:background="@color/light_dark_grey"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/whats_new_layout"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/whats_new"
                android:textSize="@dimen/text_14"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white_greyish"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/light_dark_grey"
                android:background="@drawable/ic_navigate_next_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:background="@color/light_dark_grey"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/feedback_email"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="12dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/send_feedback_email"
                android:textSize="@dimen/text_14"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white_greyish"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/light_dark_grey"
                android:background="@drawable/ic_navigate_next_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:background="@color/light_dark_grey"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/privacy_policy_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="12dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="@string/privacy_policy"
                android:textSize="@dimen/text_14"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white_greyish"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/light_dark_grey"
                android:background="@drawable/ic_navigate_next_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>


        </RelativeLayout>

        <View
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:background="@color/light_dark_grey"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/version_textview"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_15"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/light_dark_grey"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</RelativeLayout>

