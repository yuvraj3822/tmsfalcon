<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="4"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="@drawable/curved_top_shape"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/damage_heading"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_14"
                android:textColor="@color/light_greyish"
                android:text="Injured Person Details"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:orientation="vertical"
            android:background="@color/loan_second_block"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:padding="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/name"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:text="Edward Richard"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:padding="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/phone_no"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/phone_no"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:text="35563477"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:padding="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/email"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/email_id"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:text="demo@traveloko.com"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:padding="2dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/address"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:text="Demo ,Victoria Street ,1234"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/cancel_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/cross"/>

</FrameLayout>