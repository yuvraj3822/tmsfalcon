<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/first_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/trip_detail_tab_background"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_tab_info"/>
        <TextView
            android:id="@+id/tvtab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Itinerary"
            android:textColor="@color/white_greyish"
            android:textSize="13sp"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/second_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/trip_detail_tab_background"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_tab_expense"/>
        <TextView
            android:id="@+id/tvtab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settlement"
            android:textColor="@color/white_greyish"
            android:textSize="13sp"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/third_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/trip_detail_tab_background"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_tab_document"/>
        <TextView
            android:id="@+id/tvtab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textColor="@color/white_greyish"
            android:textSize="13sp"
            android:layout_marginLeft="3dp"/>
    </LinearLayout>

</LinearLayout>