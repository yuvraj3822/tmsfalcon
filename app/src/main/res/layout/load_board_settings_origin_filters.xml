<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/transparent_curved_border_outline"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/origin_filter_header"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|left"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:text="@string/origin"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_12"
                android:textColor="@color/white_greyish"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center_vertical|right"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/timeline_line"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/origin_filter_body"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/timeline_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/origin"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/current_location_icon"
                    android:layout_width="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="25dp"
                    android:tooltipText="@string/current_location"
                    android:tint="@color/light_grey"
                    android:src="@drawable/current_location_black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_gravity="center_vertical">
                <AutoCompleteTextView
                    android:id="@+id/origin_state_edittext"
                    android:layout_width="0dp"
                    android:hint="@string/enter_state_city"
                    android:textSize="@dimen/text_12"
                    android:completionThreshold="3"
                    android:layout_weight="1.3"
                    android:inputType="text"
                    android:textColorHint="@color/light_dark_grey"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
                <AutoCompleteTextView
                    android:id="@+id/origin_zipcode_edittext"
                    android:layout_width="0dp"
                    android:hint="@string/enter_zipcode"
                    android:textSize="@dimen/text_12"
                    android:completionThreshold="3"
                    android:inputType="number"
                    android:layout_weight="0.7"
                    android:textColorHint="@color/light_dark_grey"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="@string/radius"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/origin_radius_edittext"
                    android:layout_width="120dp"
                    android:textSize="@dimen/text_12"
                    android:inputType="numberDecimal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="@string/pick_up_date"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/pick_up_date_edittext"
                    android:layout_width="120dp"
                    android:textSize="@dimen/text_12"
                    android:inputType="none"
                    android:focusable="false"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/pickup_date_cancel_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:onClick="removeView"
                    android:layout_marginLeft="5dp"
                    android:tint="@color/white_greyish"
                    android:src="@drawable/cross"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:text="@string/pick_up_end_date"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|right"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">
                <EditText
                    android:id="@+id/pick_up_end_date_edittext"
                    android:layout_width="120dp"
                    android:textSize="@dimen/text_12"
                    android:inputType="none"
                    android:focusable="false"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textColor="@color/white_greyish"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/pickup_enddate_cancel_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:onClick="removeView"
                    android:layout_marginLeft="5dp"
                    android:tint="@color/white_greyish"
                    android:src="@drawable/cross"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>