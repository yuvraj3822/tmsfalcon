<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/capture_content_color"
    tools:context="com.tmsfalcon.device.tmsfalcon.activities.CaptureDocument">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_layout"
        android:layout_above="@+id/bottom_layout"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/captured_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/toolbar_background"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/proceed_layout"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/tick_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tick"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tick_image"
                    android:layout_height="wrap_content"
                    android:text="@string/next"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/add_new_image_layout"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/recapture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera_recapture"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/recapture"
                    android:layout_height="wrap_content"
                    android:text="@string/add_new"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
