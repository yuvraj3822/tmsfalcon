<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/capture_content_color"
    tools:context="com.tmsfalcon.device.tmsfalcon.fragments.SettingsTabFragmnet">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:id="@+id/main_layout"
       android:visibility="gone"
       android:layout_height="match_parent">
       <LinearLayout
           android:id="@+id/user_info_layout"
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:weightSum="3"
           android:padding="10dp"
           android:layout_alignParentTop="true"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_gravity="center"
               android:gravity="center"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <de.hdodenhof.circleimageview.CircleImageView
                   android:id="@+id/rc_image"
                   android:layout_width="72dp"
                   android:layout_height="72dp"
                   android:src="@drawable/driver_female"/>
               <LinearLayout
                   android:id="@+id/status_circle_image"
                   android:layout_width="12dp"
                   android:layout_height="12dp"
                   android:orientation="horizontal"
                   android:layout_marginEnd="-25dp"
                   android:layout_marginTop="-12dp"
                   android:background="@drawable/circle_green"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_gravity="center"
               android:gravity="center"
               android:orientation="vertical"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/rc_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/blue_logo"
                   android:textSize="@dimen/text_16"
                   android:text=""/>
               <TextView
                   android:id="@+id/rc_phone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white_greyish"
                   android:textSize="@dimen/text_14"
                   android:text=""/>
               <TextView
                   android:id="@+id/rc_extension"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white_greyish"
                   android:textSize="@dimen/text_14"
                   android:text=""/>
           </LinearLayout>

       </LinearLayout>
       <View
           android:id="@+id/first_view"
           android:layout_below="@+id/user_info_layout"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/timeline_line"/>

       <LinearLayout
           android:id="@+id/status_complete_layout"
           android:layout_width="match_parent"
           android:layout_marginTop="20dp"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_below="@+id/first_view"
           android:orientation="vertical">
           <!-- <LinearLayout
               android:id="@+id/status_layout"
               android:layout_width="match_parent"
               android:weightSum="2"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:gravity="center_vertical"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/status"
                       android:textSize="@dimen/text_16"
                       android:textColor="@color/blue_logo"/>
               </LinearLayout>
               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:gravity="center_vertical"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:id="@+id/status_circle_text"
                       android:layout_width="10dp"
                       android:layout_height="10dp"
                       android:orientation="vertical"
                       android:gravity="center_vertical"
