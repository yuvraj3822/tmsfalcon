<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="5"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4.1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/settlement_batch_id"
            android:text="BATCH-6"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_logo"
            android:textSize="@dimen/text_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settlement_amount"
                android:textColor="@color/white_greyish"
                android:textSize="@dimen/text_12"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/white_greyish"
                android:textSize="@dimen/text_12"/>
            <TextView
                android:id="@+id/total_settlement_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_5"
                android:textColor="@color/white_greyish"
                android:textSize="@dimen/text_12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settled_at"
                android:textColor="@color/white_greyish"
                android:textSize="@dimen/text_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/white_greyish"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/settled_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_5"
                android:textColor="@color/white_greyish"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/viewDocBtn"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/view"
            android:textColor="@color/crop_border_color"
            android:textAllCaps="false"
            android:textSize="@dimen/text_14"
            android:background="@drawable/button_background_overall"/>
    </LinearLayout>

</LinearLayout>