<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/capture_content_color"
    tools:context="com.tmsfalcon.device.tmsfalcon.activities.CaptureDocument">
   <!-- <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_capture_document"/>-->
    <FrameLayout
        android:id="@+id/container_scan"
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_layout">
       <!-- <FrameLayout
            android:id="@+id/texture_frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_above="@+id/bottom_layout"
            android:layout_below="@+id/toolbar_layout">
            <TextureView
                android:id="@+id/texture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <include
                layout="@layout/capture_btn_custom_layout"/>
        </FrameLayout>-->
        <FrameLayout
            android:id="@+id/camera_one_preview"
            android:layout_width="match_parent"
            android:layout_above="@+id/bottom_layout"
            android:layout_below="@+id/toolbar_layout"
            android:layout_height="match_parent">

        </FrameLayout>
        <include
            layout="@layout/capture_btn_custom_layout"/>
        <LinearLayout
            android:id="@+id/capture_hint_layout"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:background="@drawable/hint_white"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/capture_hint_text"
                style="@style/TextShadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/finding_rect"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/toolbar_background"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/flash_layout"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/bottom_lights"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:src="@drawable/headlight_off"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/flash_text"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/bottom_lights"
                    android:layout_height="wrap_content"
                    android:text="@string/lights_off"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/import_layout"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/import_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/import_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/import_icon"
                    android:layout_height="wrap_content"
                    android:text="@string/import_file"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
