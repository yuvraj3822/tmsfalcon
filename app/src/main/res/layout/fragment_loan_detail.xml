<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:id="@+id/main_content"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/loan_detail_curved_top"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.7"
                        android:src="@drawable/annual"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_seventy_percent_opacity"
                        android:textSize="@dimen/text_14"
                        android:text="@string/annual_interest_rate"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/interest"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_greyish"
                        android:textSize="@dimen/text_14"
                        android:text="$167890"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.7"
                        android:src="@drawable/loan_date"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_seventy_percent_opacity"
                        android:textSize="@dimen/text_14"
                        android:text="@string/loan_date"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/loan_date"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_greyish"
                        android:textSize="@dimen/text_14"
                        android:text="$167890"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.7"
                        android:src="@drawable/payment_frequency"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_seventy_percent_opacity"
                        android:textSize="@dimen/text_14"
                        android:text="@string/payment_frequency"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/payment_schedule"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_greyish"
                        android:textSize="@dimen/text_14"
                        android:text="$167890"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.7"
                        android:src="@drawable/total_interest_due"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_seventy_percent_opacity"
                        android:textSize="@dimen/text_14"
                        android:text="@string/total_interest_due"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/total_interest_due"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_greyish"
                        android:textSize="@dimen/text_14"
                        android:text="$167890"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.7"
                        android:src="@drawable/no_of_payments"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_seventy_percent_opacity"
                        android:textSize="@dimen/text_14"
                        android:text="@string/no_payments"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/no_installment"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_greyish"
                        android:textSize="@dimen/text_14"
                        android:text="$167890"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.7"
                        android:src="@drawable/periodic_payments"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_seventy_percent_opacity"
                        android:textSize="@dimen/text_14"
                        android:text="@string/periodic_payment"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/installment_amount"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_greyish"
                        android:textSize="@dimen/text_14"
                        android:text="$167890"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.7"
                        android:src="@drawable/first_payment"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_seventy_percent_opacity"
                        android:textSize="@dimen/text_14"
                        android:text="@string/first_payment_due"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/first_payment_due"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_greyish"
                        android:textSize="@dimen/text_14"
                        android:text="$167890"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.7"
                        android:src="@drawable/last_payment_due"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_seventy_percent_opacity"
                        android:textSize="@dimen/text_14"
                        android:text="@string/last_payment_due"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/last_payment_due"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_greyish"
                        android:textSize="@dimen/text_14"
                        android:text="$167890"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:alpha="0.7"
                        android:src="@drawable/total"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_seventy_percent_opacity"
                        android:textSize="@dimen/text_14"
                        android:text="@string/paid_loan_amount"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/total_payments"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_greyish"
                        android:textSize="@dimen/text_14"
                        android:text="$167890"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
