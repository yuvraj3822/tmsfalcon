<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@color/capture_content_color"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/document_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/crop_border_color"
                    android:textSize="@dimen/text_14"/>
                <TextView
                    android:id="@+id/load_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/second_layout"
                android:layout_below="@+id/first_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_14"
                    android:text="Date"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_14"
                    android:text=":"/>
                <TextView
                    android:id="@+id/document_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/status_circle"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/status"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/light_greyish"
                android:textSize="@dimen/text_14"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/third_layout"
                android:layout_below="@+id/second_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_14"
                    android:text="Type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_14"
                    android:text=":"/>
                <TextView
                    android:id="@+id/document_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/light_greyish"
                    android:textSize="@dimen/text_12"
                    android:minLines="2"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:text="@string/view"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/crop_border_color"
                android:background="@drawable/button_background_overall"
                android:layout_height="32dp"
                android:textAllCaps="false"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>