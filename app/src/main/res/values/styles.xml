<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

    </style>

    <style name="switch_custom" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue_logo</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/light_grey</item>
    </style>

    <style name="TextShadow">
        <item name="android:shadowColor">@color/colorBlackFortyPercentAlpha</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="Spinner">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent          color by default -->
    </style>


    <style name="SpinnerTextWhite">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/white_greyish</item>
        <item name="android:colorControlNormal">@color/white_greyish</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent          color by default -->
    </style>

    <style name="Spinner2" parent="@android:style/Widget.TextView.SpinnerItem">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/white_greyish</item>
        <item name="colorControlActivated">@color/white_greyish</item>
        <item name="android:textSize">15sp</item>
        <item name="android:colorControlNormal">@color/white_greyish</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent          color by default -->
    </style>

    <style name="Theme.AppCompat.Dark.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/blue_logo</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TripTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextLabel" parent="Theme.AppCompat">
        <item name="android:textColorHint">@color/light_greyish</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/blue_logo</item>
        <item name="colorControlNormal">@color/light_greyish</item>
        <item name="colorControlActivated">@color/blue_logo</item>
    </style>

    <style name="CustomTextInputLayoutStyle.ErrorTextStyle" parent="TextAppearance.Design.Error">
        <item name="android:textSize">5sp</item>
    </style>
    <style name="Theme_Dialog_Alert" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

<!--    .TextAppearance.AppCompat-->
    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/light_greyish</item>
        <item name="colorControlNormal">@color/white_greyish</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Holo.Light" >
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>



    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#000000</item>
        <!-- Used for the background -->
        <item name="android:background">@color/white</item>
    </style>
    <!--Applying Default Transition between activities-->

